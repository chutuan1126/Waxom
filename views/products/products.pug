extends ../layout

block content
  h1 Products
  .row
    a(href='/product/addProduct', style='color: white')
      button.btn.btn-primary Add Product
  br
  table.table
    thead
      tr
        th(scope='col') STT
        th(scope='col') Image
        th(scope='col') Product Name
        th(scope='col') Product Content
        th(scope='col') Actions
    tbody
      each product, index in products
        tr
          th(scope='row') #{index+1}
          td
            img(src=product.avatar, width='32')
          td #{product.proName}
          td #{product.proContent}
          td.row
            a(href="/product/view/"+ product.id)
              button.btn.btn-primary.mr-2 View
            form(action="/product/edit/"+ product.id method='GET')
              button.btn.btn-warning.mr-2(type='submit') Edit
            form(action="/product/delete/"+product.id method='POST')
                button.btn.btn-danger.mr-2(type='submit') Delete